{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowFullControlForSpecificRole",
            "Effect": "Allow",
            "Principal": {
                "AWS": "${account-id}"
            },
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObject",
                "s3:ListBucket",
                "s3:PutObjectTagging",
                "s3:DeleteObjectTagging",
                "s3:PutBucketVersioning",
                "s3:ListBucketVersions",
                "s3:DeleteObjectVersion"
            ],
            "Resource": [
                "arn:aws:s3:::lee-345003923266-migration",
                "arn:aws:s3:::lee-345003923266-migration/*"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:PrincipalArn": "arn:aws:iam::${account-id}:role/${role}"
                }
            }
        }
    ]
}