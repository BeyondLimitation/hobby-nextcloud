{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "s3:GetBucketLocation",
                "s3:ListBucket",
                "s3:ListBucketMultipartUploads"
            ],
            "Principal" :{
                "Service": "datasync.amazonaws.com"
            },
            "Effect": "Allow",
            "Resource": "${nextcloud-s3-arn}"
        },
        {
            "Action": [
                "s3:AbortMultipartUpload",
                "s3:DeleteObject",
                "s3:GetObject",
                "s3:ListMultipartUploadParts",
                "s3:GetObjectTagging",
                "s3:PutObjectTagging",
                "s3:PutObject"
              ],
            "Principal" :{
                "Service": "datasync.amazonaws.com"
            },
            "Effect": "Allow",
            "Resource": "${nextcloud-s3-arn}/*"
        }
    ]
}