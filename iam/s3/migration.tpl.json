{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowFullObjectAccessInSpecificBucket",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObject",
                "s3:GetObjectVersion",
                "s3:DeleteObjectVersion",
                "s3:ReplicateObject",
                "s3:RestoreObject",
                "s3:PutObjectAcl",
                "s3:GetObjectAcl",
                "s3:PutObjectTagging",
                "s3:GetObjectTagging",
                "s3:DeleteObjectTagging"
            ],
            "Resource": "arn:aws:s3:::${bucket-name}/*"
        },
        {
            "Sid": "AllowBucketVersioningAndTaggingOps",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketVersioning",
                "s3:PutBucketVersioning",
                "s3:GetBucketTagging",
                "s3:PutBucketTagging"
            ],
            "Resource": "arn:aws:s3:::${bucket-name}"
        },
        {
            "Sid": "AllowListAndLocation",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetBucketLocation"
            ],
            "Resource": "arn:aws:s3:::${bucket-name}"
        }
    ]
}